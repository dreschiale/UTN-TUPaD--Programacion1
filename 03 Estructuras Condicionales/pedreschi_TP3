# Ejercicio 1
edad = int(input("Ingrese su edad: "))
if edad >= 18:
    print("Es mayor de edad")
else:
    print("Es menor de edad")

#Ejercicio 2
nota = float(input("Ingrese su nota: "))
if nota >= 6:
    print("Aprobado")
else:
    print("Desaprobado")

#Ejercicio 3
numero = int(input("Ingrese un número: "))
# Verificar si el número es par 
# con el operador de módulo % se utiliza para obtener el resto 
# de la división del número entre 2. Si el resto es 0, el número es par.
if numero % 2 == 0:
    print("Ha ingresado un número par")
else:
    print("Por favor, ingrese un número par")

#Ejercicio 4
edad = int(input("Ingrese su edad: "))
if edad < 12:
    print("Niño/a")
elif edad >= 12 and edad < 18:
    print("Adolescente")
elif edad >= 18 and edad < 30:
    print("Adulto/a joven")
else:
    print("Adulto/a")

#Ejercicio 5
contraseña = input("Ingrese una contraseña: ")
# Verificar la longitud de la contraseña con la funcion len() 
if len(contraseña) >= 8 and len(contraseña) <= 14:
    print("Ha ingresado una contraseña correcta")
else:
    print("Por favor, ingrese una contraseña de entre 8 y 14 caracteres")

#Ejercicio 6
from statistics import mode, median, mean
import random
numeros_aleatorios = [random.randint(1, 100) for i in range(50)]
moda = mode(numeros_aleatorios)
mediana = median(numeros_aleatorios)
media = mean(numeros_aleatorios)
print(f"Moda: {moda}")
print(f"Mediana: {mediana}")
print(f"Media: {media}")
if media > mediana > moda:
    print("Sesgo positivo o a la derecha")
elif media < mediana < moda:
    print("Sesgo negativo o a la izquierda")
elif media == mediana == moda:
    print("Sin sesgo")
else:
    print("La distribución no se ajusta a los criterios de sesgo")

#Ejercicio 7
frase = input("Ingrese una frase o palabra: ")
if frase[-1].lower() in 'aeiouáéíóú':
    frase += '!'
print(frase)

#ejercicio 8
nombre = input("Ingrese su nombre: ")
print("Seleccione una opción:")
print("1. Nombre en mayúsculas")
print("2. Nombre en minúsculas")
print("3. Nombre con la primera letra mayúscula")
opcion = input("Ingrese el número de la opción: ")
# Transformar el nombre según la opción seleccionada
# upper(): Convierte todos los caracteres a mayúsculas.
# lower(): Convierte todos los caracteres a minúsculas.
# title(): Convierte la primera letra de cada palabra a mayúscula y el resto a minúscula.
if opcion == "1":
    resultado = nombre.upper()
elif opcion == "2":
    resultado = nombre.lower()
elif opcion == "3":
    resultado = nombre.title()
else:
    resultado = "Opción no válida"
    print("Error: ", resultado)
if opcion in ["1", "2", "3"]:
    print("Resultado: ", resultado)

#Ejercicio 9
magnitud = float(input("Ingrese la magnitud del terremoto: "))
if magnitud < 3:
    clasificacion = "Muy leve (imperceptible)"
elif magnitud < 4:
    clasificacion = "Leve (ligeramente perceptible)"
elif magnitud < 5:
    clasificacion = "Moderado (sentido por personas, pero generalmente no causa daños)"
elif magnitud < 6:
    clasificacion = "Fuerte (puede causar daños en estructuras débiles)"
elif magnitud < 7:
    clasificacion = "Muy Fuerte (puede causar daños significativos)"
else:
    clasificacion = "Extremo (puede causar graves daños a gran escala)"
print(f"La magnitud del terremoto es: {magnitud}")
print(f"Clasificación: {clasificacion}")

#Ejercicio 10
hemisferio = input("Ingrese el hemisferio en el que se encuentra (N/S): ").upper()

if hemisferio not in ["N", "S"]:
    print("Ingrese un hemisferio válido (N para norte o S para sur).")
else:
    mes = int(input("Ingrese el mes del año (1-12): "))
    dia = int(input("Ingrese el día del mes: "))

    if mes < 1 or mes > 12 or dia < 1 or dia > 31:
        print("Ingrese una fecha válida.")
    elif (mes in [4, 6, 9, 11] and dia > 30) or (mes == 2 and dia > 29):
        print("Ingrese una fecha válida para el mes ingresado.")
    else:
        if (mes == 12 and dia >= 21) or (mes in [1, 2]) or (mes == 3 and dia <= 20):
            estacion = "Invierno" if hemisferio == "N" else "Verano"
        elif (mes == 3 and dia >= 21) or (mes in [4, 5]) or (mes == 6 and dia <= 20):
            estacion = "Primavera" if hemisferio == "N" else "Otoño"
        elif (mes == 6 and dia >= 21) or (mes in [7, 8]) or (mes == 9 and dia <= 20):
            estacion = "Verano" if hemisferio == "N" else "Invierno"
        else:
            estacion = "Otoño" if hemisferio == "N" else "Primavera"

        print(f"La estación del año en el hemisferio {'norte' if hemisferio == 'N' else 'sur'} es: {estacion}")